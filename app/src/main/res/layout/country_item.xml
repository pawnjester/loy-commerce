<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_width="match_parent">

    <ImageView
        android:layout_width="25.5dp"
        android:layout_height="15dp"
        android:id="@+id/international_phone_input_country_flag"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/country_gh"
        android:contentDescription="@string/item_image_contentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/international_phone_input_country_name"
        android:textColor="?android:textColorPrimary"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@+id/international_phone_input_country_dial_code"
        android:layout_toStartOf="@+id/international_phone_input_country_dial_code"
        android:layout_toRightOf="@+id/international_phone_input_country_flag"
        android:layout_toEndOf="@+id/international_phone_input_country_flag" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/international_phone_input_country_dial_code"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="?android:textColorHint" />
</RelativeLayout>