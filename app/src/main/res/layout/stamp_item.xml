<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/grid_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_oval_small"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:contentDescription="@string/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_item_image"
        android:layout_alignLeft="@id/grid_item_label"
        android:layout_alignStart="@+id/grid_item_label"
        android:layout_alignTop="@id/grid_item_label"
        android:layout_alignRight="@id/grid_item_label"
        android:layout_alignEnd="@+id/grid_item_label"
        android:layout_alignBottom="@id/grid_item_label"
        />

</RelativeLayout>
