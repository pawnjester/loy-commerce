<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteTextViewStyle</item>
        <item name="textAppearanceSearchResultTitle">@style/mySearchSuggestionResultTitle</item>
        <item name="textAppearanceSearchResultSubtitle">
            @style/mySearchSuggestionResultSubTitle
        </item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_primary_color">@color/colorPrimary</item>
        <item name="com_accountkit_primary_text_color">@android:color/white</item>
        <item name="com_accountkit_secondary_text_color">@color/colorAccent</item>
        <item name="com_accountkit_status_bar_color">@color/colorPrimaryDark</item>

        <item name="com_accountkit_input_accent_color">?attr/com_accountkit_primary_color</item>
        <item name="com_accountkit_input_border_color">?attr/com_accountkit_primary_color</item>
    </style>

    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.BrandedLaunch" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FullBorderEditTextStyle">
        <item name="android:background">@drawable/full_border_edit_text_shape</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="FullBorderEditWhiteTextStyle">
        <item name="android:background">@drawable/full_border_white_edit</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorAccent</item>
        <item name="fab_colorRipple">@color/colorPrimaryDark</item>
    </style>

    <style name="myAutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <style name="mySearchSuggestionResultTitle" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mySearchSuggestionResultSubTitle" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grayish_blue</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="textViewLabelTextStyle">
        <item name="android:textColor">@color/wallet_hint_foreground_holo_dark</item>
        <item name="android:textSize">@dimen/text_view_label_text_size</item>
    </style>

    <style name="MenuButtonsDeleteStyle">
        <item name="fab_size">mini</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/white</item>
        <item name="fab_colorPressed">@color/cardview_light_background</item>
        <item name="fab_colorRipple">@color/light_grey</item>
    </style>

    <style name="Theme.ActionBar.HigherElevation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="elevation">10dp</item>
    </style>

</resources>
